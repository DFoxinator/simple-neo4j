<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/bootstrap.php"
         colors="true">
    <testsuites>
        <testsuite>
            <directory>./tests/unit</directory>
        </testsuite>
    </testsuites>
    <php>
        <ini name="memory_limit" value="-1"/>
    </php>
    <filter>
        <blacklist>
            <directory>./vendor</directory>
            <directory>./tests/</directory>
        </blacklist>
    </filter>
</phpunit>
